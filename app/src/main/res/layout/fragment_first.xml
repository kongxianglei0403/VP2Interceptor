<?xml version="1.0" encoding="utf-8"?>
<com.atu.vp2interceptor.VP2Container xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_child"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabSelectedTextColor="#000000"
        app:tabTextColor="#000000" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_child"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_child"
        app:layout_constraintVertical_weight="1" />


</com.atu.vp2interceptor.VP2Container>